        <TextBlock HorizontalAlignment="Left" Margin="360,27,0,0" TextWrapping="Wrap" Text="Indirizzo IP" VerticalAlignment="Top" Height="13" Width="45"/>
        <TextBlock HorizontalAlignment="Left" Margin="525,27,0,0" TextWrapping="Wrap" Text="Port" VerticalAlignment="Top" Height="13" Width="28"/>
        <Label Content="Ricevitore" HorizontalAlignment="Left" Height="29" Margin="360,0,0,0" VerticalAlignment="Top" Width="302"/>
        <Label Content="Trasmettitore" HorizontalAlignment="Left" Height="29" Margin="23,0,0,0" VerticalAlignment="Top" Width="306"/>


    </Grid>
